## Nome da aplicação para o ambiente de teste
#spring.application.name=burguer51-test
#
## Configurações de JPA para exibir SQL formatado e mostrar no log
#spring.jpa.properties.hibernate.format_sql=true
#spring.jpa.properties.hibernate.show_sql=true
#
## Configurações de inicialização do banco de dados
#spring.datasource.initialization-mode=always
#
## Configurações do banco de dados H2 para testes
#spring.datasource.url=jdbc:h2:mem:testdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
#spring.datasource.driver-class-name=org.h2.Driver
#spring.datasource.username=sa
#spring.datasource.password=
#
## Dialeto Hibernate para H2
#spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.H2Dialect
#
## Configuração de DDL Hibernate
#spring.jpa.hibernate.ddl-auto=create-drop
#
## Configurações adicionais para inicialização do banco de dados (opcional)
#spring.jpa.defer-datasource-initialization=true
#spring.sql.init.mode=always





# application-h2.properties
spring.application.name=burguer51-test

# Configuração do H2 em memória
spring.datasource.url=jdbc:h2:mem:testdb
spring.datasource.driver-class-name=org.h2.Driver
spring.datasource.username=sa
spring.datasource.password=
spring.h2.console.enabled=true
spring.datasource.hikari.data-source-properties.stringtype=unspecified

# Configuração do Hibernate
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.show-sql=true
spring.jpa.hibernate.ddl-auto=create-drop


